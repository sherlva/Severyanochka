</div>
<section class="discount">
    <div class="container">
        <div class="row justify-content-between">
            <div class="discount_title">
                <h2>Акции</h2>
            </div>
            <div class="discount_link">
                <a href="#" class="discount_link_df row"><span>Все акции</span><svg width="24" height="24"
                        viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M8.64645 5.64645C8.84171 5.45118 9.15829 5.45118 9.35355 5.64645L15.3536 11.6464C15.5488 11.8417 15.5488 12.1583 15.3536 12.3536L9.35355 18.3536C9.15829 18.5488 8.84171 18.5488 8.64645 18.3536C8.45118 18.1583 8.45118 17.8417 8.64645 17.6464L14.2929 12L8.64645 6.35355C8.45118 6.15829 8.45118 5.84171 8.64645 5.64645Z"
                            fill="#606060" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="cards row justify-content-between align-items-center">
            
            {{#each products}}
            <div class="card">
                <div class="card_top">
                    <div>
                        <form action="/favorites/{{id}}" method="post">
                        <button type="submit" class="like">
                           <i class="fa-solid fa-heart"></i>
                        </button>
                        </form>
                    </div>
                    <img src="{{img}}" alt="" class="card_img">
                    <div class="discount_precent">
                        <p>-50%</p>
                    </div>
                </div>
                <div class="card_bottom">
                    <div class="card_price row justify-content-between align-items-center">
                        <div class="with_card">
                            <p class="with_card_price">44,50 ₽</p>
                            <P class="with_card_text">С картой</P>
                        </div>
                        <div class="without_card">
                            <p class="without_card_price">50,50 ₽</p>
                            <P class="without_card_text">Обычная</P>
                        </div>
                    </div>
                    <div class="card_title">
                        <h3>{{name}}</h3>
                    </div>
                    <div class="cart_stars card_stars">
                        <input type="hidden" id="stars" value="{{star}}">
                    </div>
                    <div class="card_btn_buy">
                        <form action="/shopping/add/{{id}}" method="post">
                        <button type="submit">В корзину</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

